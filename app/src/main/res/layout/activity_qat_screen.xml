<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/form_field_padding"
                    android:background="@drawable/customborder"
                    android:weightSum="10">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        style="@style/text_style"
                        android:textColor="@color/black"
                        android:gravity="center_vertical"
                        android:layout_weight="7"
                        android:text="Date of Assessment"/>
                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        style="@style/text_style"
                        android:textStyle="bold"
                        android:textColor="@color/darkGreen"
                        android:layout_weight="3"
                        android:focusable="false"
                        android:id="@+id/etDateOFAssessment"/>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/form_field_padding"
                    android:background="@drawable/customborder"
                    android:padding="@dimen/padding_10"
                    android:weightSum="10">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        style="@style/text_style"
                        android:textColor="@color/black"
                        android:gravity="center_vertical"
                        android:layout_weight="7"
                        android:text="QAM Code"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        style="@style/text_style"
                        android:textColor="@color/black"
                        android:gravity="center_vertical"
                        android:layout_weight="7"
                        android:id="@+id/tvQAMCode"
                        android:text=""/>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/form_field_padding"
                    android:background="@drawable/customborder"
                    android:padding="@dimen/padding_10"
                    android:weightSum="10">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        style="@style/text_style"
                        android:textColor="@color/black"
                        android:gravity="center_vertical"
                        android:layout_weight="7"
                        android:text="QAM Name"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        style="@style/text_style"
                        android:textColor="@color/black"
                        android:gravity="center_vertical"
                        android:layout_weight="7"
                        android:id="@+id/tvQAMName"
                        android:text=""/>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/form_field_padding"
                    android:background="@drawable/customborder"
                    android:padding="@dimen/padding_10"
                    android:weightSum="10">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        style="@style/text_style"
                        android:textColor="@color/black"
                        android:gravity="center_vertical"
                        android:layout_weight="7"
                        android:text="Supervisor Code"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:id="@+id/tvSupervisorCode"
                        android:textColor="@color/black"
                        android:text="">
                    </TextView>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/form_field_padding"
                    android:background="@drawable/customborder"
                    android:padding="@dimen/padding_10"
                    android:weightSum="10">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        style="@style/text_style"
                        android:textColor="@color/black"
                        android:gravity="center_vertical"
                        android:layout_weight="7"
                        android:text="Supervisor Name"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:textColor="@color/black"
                        android:id="@+id/tvSupervisorName"
                        android:text="">
                    </TextView>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/form_field_padding"
                    android:background="@drawable/customborder"
                    android:padding="@dimen/padding_10"
                    android:weightSum="10">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        style="@style/text_style"
                        android:textColor="@color/black"
                        android:gravity="center_vertical"
                        android:layout_weight="7"
                        android:text="Region"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:id="@+id/tvRegion"
                        android:textColor="@color/black"
                        android:text="">
                    </TextView>
                </TableRow>
            </TableLayout>
            <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                android:id="@+id/spProviderCodeName"
                android:prompt="@string/providers"
                android:layout_width="fill_parent"
                style="@style/spinner_style"
                android:layout_height="@dimen/spinner_height"
                android:autofillHints="@string/providers"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/llQuestionBank"
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="vertical"
                ></LinearLayout>
            <Button
                android:layout_width="match_parent"
                android:layout_height="@dimen/spinner_height"
                android:background="@drawable/customborder"
                android:id="@+id/btnSubmit"
                style="@style/text_style"
                android:layout_marginTop="5dp"
                android:text="@string/submit"/>
        </LinearLayout>

    </ScrollView>
</android.support.constraint.ConstraintLayout>